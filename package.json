{
  "name": "cartridge-module-util",
  "version": "0.4.2",
  "description": "Uitility code for modules form the Carteidge project",
  "keywords": [
    "dependency",
    "cartridge"
  ],
  "homepage": "https://github.com/cartridge/cartridge-module-util",
  "bugs": {
    "url": "https://github.com/cartridge/cartridge-module-util/issues"
  },
  "license": "MIT",
  "author": "Code Computerlove <npm@codecomputerlove.co.uk>",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cartridge/cartridge-module-util.git"
  },
  "scripts": {
    "test": "node run lint && node run mocha",
    "lint": "eslint index.js",
    "mocha": "mocha"
  },
  "dependencies": {
    "bluebird": "^3.3.4",
    "chalk": "^1.1.1",
    "fs-extra": "^0.26.7",
    "lodash": "^4.6.1",
    "path": "^0.12.7",
    "path-exists": "^2.1.0"
  },
  "devDependencies": {
    "chai": "^1.10.0",
    "chai-fs": "^0.1.0",
    "cz-conventional-changelog": "^1.1.5",
    "eslint": "^2.7.0",
    "ghooks": "^1.2.1",
    "mocha": "^2.4.5",
    "rewire": "^2.5.1",
    "strip-ansi": "^3.0.1",
    "validate-commit-msg": "^2.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    }
  }
}
